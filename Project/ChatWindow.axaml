<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Width="300" Height="400"
        x:Class="Project.ChatWindow"
        Title="Chat">
	<StackPanel Width="300" Height="400" Background="White" HorizontalAlignment="Center" VerticalAlignment="Top">
		<TextBlock Height ="335" HorizontalAlignment="Center" VerticalAlignment="Top" Name="Chat" />
		<TextBox Name="Message" Width ="200" HorizontalAlignment="Center" VerticalAlignment="Bottom" Watermark="Message"/>
		<Button Name ="Send" Click="Send_Click" HorizontalAlignment="Center" VerticalAlignment="Bottom" Width ="120">Send message</Button>
	</StackPanel>
</Window>
